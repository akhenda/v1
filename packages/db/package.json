{
  "name": "@v1/db",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf .turbo node_modules",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "format": "biome --write .",
    "generate": "bun run build && drizzle-kit generate",
    "lint": "biome check .",
    "migrate": "bun run build && drizzle-kit migrate --config=./drizzle.config.ts",
    "typecheck": "tsc --noEmit",
    "seed": "bun run build && tsx dist/src/seed.js",
    "studio": "bun run build && drizzle-kit studio --config=./drizzle.config.ts"
  },
  "dependencies": {
    "@clerk/nextjs": "6.9.6",
    "@clerk/themes": "2.2.3",
    "@v1/logging": "workspace:*",
    "@v1/types": "workspace:*",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "drizzle-orm": "0.38.3",
    "drizzle-zod": "0.6.1",
    "pg": "8.13.1",
    "postgres": "3.4.5",
    "remeda": "2.19.0",
    "ulid": "2.3.0",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "drizzle-kit": "0.30.1",
    "tsx": "4.19.2"
  }
}
